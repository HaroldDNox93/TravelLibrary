@model WebApp.ViewModels.IndexViewModels
@{
    int previousPage = Model.Libros.PageNumber - 1;
    int nextPage = Model.Libros.PageNumber + 1;
}
<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">
        <li class="page-item @(Model.Libros.HasPreviousPage ? "" : "disabled")">
            <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@previousPage">Previous</a>
        </li>
        @for (var pageIndex = 1; pageIndex <= Model.Libros.TotalPages; pageIndex++)
        {
            <li class="page-item @(Model.Libros.PageNumber == pageIndex ? "disabled" : "")">
                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@pageIndex">
                    @pageIndex
                </a>
            </li>
        }
        <li class="page-item @(Model.Libros.HasNextPage ? "" : "disabled")">
            <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-page="@nextPage">Next</a>
        </li>
    </ul>
</nav>