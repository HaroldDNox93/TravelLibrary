@model WebApp.ViewModels.IndexViewModels
@{
    ViewData["Title"] = "Travel Library";
}
@{
    var modelPagination = Model;
    int previousPage = Model.Libros.PageNumber - 1;
    int nextPage = Model.Libros.PageNumber + 1;
}

<div class="container p-3">
    <div class="row">
        <div class="col-10 text-center">
            <h4 class="text-center">LIBROS</h4>
        </div>
        <div class="col-2 text-right">
            <a asp-controller="Home" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Agregar libro
            </a>
        </div>
    </div>
</div>


<partial name="_Pagination" model="@modelPagination" />

<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th scope="col">Titulo</th>
        <th scope="col">Nro Paginas</th>
        <th scope="col"></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var libro in Model.Libros.Items)
    {
        <tr>
            <td>@libro.Titulo</td>
            <td>@libro.N_Paginas</td>
            <td>
                <a asp-controller="Home" asp-action="Detail" asp-route-id="@libro.Isbn">
                    <i class="bi bi-pencil-square"></i> Ver
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

<partial name="_Pagination" model="@modelPagination" />